<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="38dp"
    android:layout_marginLeft="17dp"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="103dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <ImageView
            android:layout_marginBottom="15dp"
            android:id="@+id/img_curso_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >
        <TextView
            android:textColor="#2AB598"
            android:id="@+id/txt_titulo_curso_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/txt_descricao_curso_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"/>

        <TextView
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#FDA506"
            android:id="@+id/txt_leia_mais_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="Leia mais"/>

    </LinearLayout>







</LinearLayout>